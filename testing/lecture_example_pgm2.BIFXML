<?xml version="1.0" encoding="US-ASCII"?>

<!--Author: Andreas Sauter
    Bayesian network in XMLBIF v0.3 (BayesNet Interchange Format)
 -->

<!-- DTD for the XMLBIF 0.3 format -->
<!DOCTYPE BIF [
	<!ELEMENT BIF ( NETWORK )*>
	      <!ATTLIST BIF VERSION CDATA #REQUIRED>
	<!ELEMENT NETWORK ( NAME, ( PROPERTY | VARIABLE | DEFINITION )* )>
	<!ELEMENT NAME (#PCDATA)>
	<!ELEMENT VARIABLE ( NAME, ( OUTCOME |  PROPERTY )* ) >
	      <!ATTLIST VARIABLE TYPE (nature|decision|utility) "nature">
	<!ELEMENT OUTCOME (#PCDATA)>
	<!ELEMENT DEFINITION ( FOR | GIVEN | TABLE | PROPERTY )* >
	<!ELEMENT FOR (#PCDATA)>
	<!ELEMENT GIVEN (#PCDATA)>
	<!ELEMENT TABLE (#PCDATA)>
	<!ELEMENT PROPERTY (#PCDATA)>
]>

<BIF VERSION="0.3">
<NETWORK>
    <NAME>Lecture Example</NAME>

    <!-- Variables-->
    <VARIABLE TYPE="nature">
        <NAME>Visit to Asia?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Tuberculosis?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Smoker?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Lung cancer?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Bronchitis?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Tuberculosis or Cancer?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Dyspnoea?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>
    <VARIABLE TYPE="nature">
        <NAME>Positive x-ray?</NAME>
        <OUTCOME>True</OUTCOME>
        <OUTCOME>False</OUTCOME>
    </VARIABLE>


    <!-- PCTs -->
    <DEFINITION>
        <FOR>Visit to Asia?</FOR>
        <TABLE>0.4 0.6</TABLE>
    </DEFINITION>

    <DEFINITION>
        <FOR>Smoker?</FOR>
        <TABLE>0.4 0.6</TABLE>
    </DEFINITION>

    <DEFINITION>
        <FOR>Tuberculosis?</FOR>
        <GIVEN>Visit to Asia?</GIVEN>
        <TABLE>0.4 0.6 0.5 0.5</TABLE>
    </DEFINITION>

    <DEFINITION>
        <FOR>Lung cancer?</FOR>
        <GIVEN>Smoker?</GIVEN>
        <TABLE>0.4 0.6 0.5 0.5</TABLE>
    </DEFINITION>

    <DEFINITION>
        <FOR>Bronchitis?</FOR>
        <GIVEN>Smoker?</GIVEN>
        <TABLE>0.4 0.6 0.5 0.5</TABLE>
    </DEFINITION>

    <DEFINITION>
        <FOR>Tuberculosis or Cancer?</FOR>
        <GIVEN>Tuberculosis?</GIVEN>
        <GIVEN>Lung cancer?</GIVEN>
        <TABLE>0.4 0.6 0.5 0.5 0.3 0.7 0.1 0.9</TABLE>
    </DEFINITION>

    <DEFINITION>
        <FOR>Dyspnoea?</FOR>
        <GIVEN>Bronchitis?</GIVEN>
        <GIVEN>Tuberculosis or Cancer?</GIVEN>
        <TABLE>1.0 0.0 0.2 0.8 0.1 0.9 0.05 0.95</TABLE>
    </DEFINITION>

    <DEFINITION>
        <FOR>Positive x-ray?</FOR>
        <GIVEN>Tuberculosis or Cancer?</GIVEN>
        <TABLE>0.4 0.6 0.5 0.5</TABLE>
    </DEFINITION>
</NETWORK>
</BIF>